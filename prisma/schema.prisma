generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Roles {
  ADMIN
  MEMBER //normal user
}

model User {
  id            String    @id @default(uuid())
  role          Roles
  fullName      String    @map("full_name")
  phone         String    @unique
  verifiedPhone Boolean   @default(false) @map("verified_phone")
  password      String
  image         String?
  email         String    @unique
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  deletedAt     DateTime?
}
