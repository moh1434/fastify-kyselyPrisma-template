{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 22",
  "_version": "22.0.0",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build",
    "sourceMap": true,
    "rootDir": "./src",
    "lib": ["es2023"],
    "module": "NodeNext",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["src/utils/type/"],
    "paths": {
      "zod": ["src/node____modules/zod/index.js"]
    }
  },
  "ts-node": {
    "esm": true,
    "files": true
  },
  "exclude": ["./prisma/seed/**"],
  "include": ["src/**/*.ts", "eslint.config.mjs", "src/utils/type/"]
}
